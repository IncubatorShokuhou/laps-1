LAPSROOT=@top_srcdir@
INSTALLROOT=@prefix@

# Specify Fortran, C, and loader options for default SUN configuration.

CC=@CC@

CFLAGS=@CFLAGS@ $(INC)  @OPTIMIZE@

FC       = @FC@


FFLAGS = @FFLAGS@ $(INC)  @OPTIMIZE@

# Define pre-processor command line options for .F files.

CPP = @CPP@
CPPFLAGS=@CPPFLAGS@
INSTALL=@INSTALL@

# Define include paths.

INC = -I$(LAPSROOT)/src/include -I@NETCDFINC@

# Define local library name, this houses the module's code

LAPSLIBS = $(LAPSROOT)/src/lib/liblaps.a  \

DBLAPSLIBS = $(LAPSROOT)/src/lib/libdebuglaps.a  \


OTHERLIBS = @NETCDFLIB@/libnetcdf.a @OTHERLIBS@

.SUFFIXES:
.SUFFIXES: .o .c .f .a .F .i .exe .x

EXE = lsm5.exe


# Define other variables 

AR  = @ARCHIVE@
RANLIB   = @RANLIB@

# Define all source code to be compiled and placed in local library.

SRC=soil_in5.f \
    soilmoisture5.f \
    calc_evap.f \
    readcsc.f

MAIN=lsm5.f 

LIB=libsoil.a

ARCHIVE = $(LIB)($(addsuffix .o, $(basename $(SRC))))

all: exe

exe: $(ARCHIVE) $(EXE)

$(EXE): $(ARCHIVE) $(MAIN)
	$(FC) $(MAIN) $(FFLAGS) $(LIB) $(LAPSLIBS) $(OTHERLIBS) -o $@
	rm -f *.o

#$(EXE.F): $(MAIN) $(ARCHIVE)
#	rm -f $*.f
#	$(CPP) $(CPPFLAGS) $*.F 
#	mv $*.i $*.f
#	$(FC) $(FFLAGS) $*.f $(LIB) $(LAPSLIBS) $(OTHERLIBS) -o $@
#	rm -f *.o $*.f

debug: clean $(ARCHIVE) $(MAIN)
	$(MAKE) LAPSLIBS='$(DBLAPSLIBS)' FFLAGS='$(FFLAGS) -g'

install: exe
	$(INSTALL) $(EXE) $(INSTALLROOT)/bin/$(EXE)

clean:
	rm -f $(EXE) $(LIB) *.o *~ *# *.i


distclean: clean
	rm -f Makefile


%.f : %.F
	rm -f $*.f
	$(CPP) $(CPPFLAGS) $< 
	mv $*.i $*.f

%.o : %.F









calc_evap.f:  $(LAPSROOT)/src/include/lapsparms.for $(LAPSROOT)/src/include/soilm.inc@F77INC@

lsm5.f:  $(LAPSROOT)/src/include/lapsparms.for $(LAPSROOT)/src/include/soilm.inc@F77INC@

readcsc.f:  $(LAPSROOT)/src/include/lapsparms.for@F77INC@

soil_in5.f:  $(LAPSROOT)/src/include/lapsparms.for $(LAPSROOT)/src/include/soilm.inc@F77INC@

soilmoisture5.f:  $(LAPSROOT)/src/include/lapsparms.for $(LAPSROOT)/src/include/soilm.inc@F77INC@

