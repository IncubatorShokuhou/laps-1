#
#

LAPSROOT=@top_srcdir@
INSTALLROOT=@prefix@

# Specify Fortran, C, and loader options for default SUN configuration.

CC=@CC@

CFLAGS=@CFLAGS@ $(INC)  @OPTIMIZE@

FC       = @FC@


FFLAGS = @FFLAGS@ $(INC)  @OPTIMIZE@

# Define pre-processor command line options for .F files.

CPP = @CPP@
CPPFLAGS=@CPPFLAGS@

# Define include paths.

INC = -I$(LAPSROOT)/src/include -I@NETCDFINC@

# Define local library name, this houses the module's code

LAPSLIBS = $(LAPSROOT)/src/lib/liblaps.a   \
           $(LAPSROOT)/src/lib/nav/libnav.a \
           $(LAPSROOT)/src/lib/goesinav/libgoesinav.a 


DBLAPSLIBS = $(LAPSROOT)/src/lib/libdebuglaps.a   \
             $(LAPSROOT)/src/lib/nav/libdebugnav.a \
             $(LAPSROOT)/src/lib/goesinav/libdebuggoesinav.a 

OTHERLIBS = @NETCDFLIB@/libnetcdf.a @OTHERLIBS@

.SUFFIXES:
.SUFFIXES: .o .c .f .a .F .i .x .exe

EXE = genvrclut.exe


# Define other variables 

AR  = @ARCHIVE@
RANLIB   = @RANLIB@
INSTALL = @INSTALL@

# Define all source code to be compiled and placed in local library.

SRC = gen_llij_lut_wfo.f \
      gen_llij_lut_polar.f \
      get_radar_bounds.f \
      get_rirj_pol.f \
      getuv_pol.f 


MAIN=genvrclut.f


LIB=libvrclut.a

ARCHIVE = $(LIB)($(addsuffix .o, $(basename $(SRC))))

all: exe

exe: $(ARCHIVE) $(EXE)

$(EXE): $(ARCHIVE) $(MAIN)
	$(FC) $(MAIN) $(FFLAGS) $(LIB) $(LAPSLIBS) $(OTHERLIBS) -o $@
	rm -f *.o

#$(EXE.F): $(MAIN) $(ARCHIVE)
#	rm -f $*.f
#	$(CPP) $(CPPFLAGS) $*.F 
#	mv $*.i $*.f
#	$(FC) $(FFLAGS) $*.f $(LIB) $(LAPSLIBS) $(OTHERLIBS) -o $@
#	rm -f *.o $*.f

debug: clean $(ARCHIVE) $(MAIN)
	$(MAKE) LAPSLIBS='$(DBLAPSLIBS)' FFLAGS='@FFLAGS@ $(INC) -g'

clean:
	rm -f $(EXE) $(LIB) *.o *~ *# *.i


distclean: clean
	rm -f Makefile

install: exe
	$(INSTALL) $(EXE) $(INSTALLROOT)/bin/$(EXE)

%.f : %.F
	rm -f $*.f
	$(CPP) $(CPPFLAGS) $< 
	mv $*.i $*.f

%.o : %.F









gen_llij_lut_polar.f:  $(LAPSROOT)/src/include/lapsparms.for $(LAPSROOT)/src/include/vrc.inc@F77INC@

gen_llij_lut_wfo.f:  $(LAPSROOT)/src/include/lapsparms.for@F77INC@

genvrclut.f:  $(LAPSROOT)/src/include/lapsparms.for@F77INC@

get_radar_bounds.f:  $(LAPSROOT)/src/include/lapsparms.for@F77INC@

