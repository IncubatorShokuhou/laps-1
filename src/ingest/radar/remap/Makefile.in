#
#

LAPSROOT=@top_srcdir@
INSTALLROOT=@prefix@

# Specify Fortran, C, and loader options for default SUN configuration.

CC=@CC@

CFLAGS=@CFLAGS@ $(INC)  @OPTIMIZE@

FC       = @FC@


FFLAGS = @FFLAGS@ $(INC)  @OPTIMIZE@

# Define pre-processor command line options for .F files.

CPP = @CPP@

# Define include paths.

INC = -I$(LAPSROOT)/src/include -I@NETCDFINC@

# Define local library name, this houses the module's code

LAPSLIBS = $(LAPSROOT)/src/lib/liblaps.a  \
           $(LAPSROOT)/src/lib/mthermo/libmthermo.a  \
           $(LAPSROOT)/src/lib/radar/remap_ftn/libremap_ftn.a  \
           $(LAPSROOT)/src/lib/util/libutil.a  

DBLAPSLIBS = $(LAPSROOT)/src/lib/libdebuglaps.a  \
             $(LAPSROOT)/src/lib/mthermo/libdebugmthermo.a  \
             $(LAPSROOT)/src/lib/radar/remap_ftn/libdebugremap_ftn.a  \
             $(LAPSROOT)/src/lib/util/libdebugutil.a  


OTHERLIBS = @NETCDFLIB@/libnetcdf.a @OTHERLIBS@

.SUFFIXES:
.SUFFIXES: .o .c .f .a

EXE = remap_polar_netcdf.exe


# Define other variables 

AR  = @ARCHIVE@
RANLIB   = @RANLIB@
INSTALL = @INSTALL@

# Define all source code to be compiled and placed in local library.

SRC=remap.f netcdfio.f get_tilt_netcdf.f


all: exe

exe: $(EXE)

$(EXE): $(SRC)
	$(FC) $(FFLAGS) $(SRC) $(LAPSLIBS) $(OTHERLIBS) -o $@
	rm -f *.o

debug: $(SRC)
	rm -f $(EXE) *.o;
	$(MAKE) LAPSLIBS='$(DBLAPSLIBS)' FFLAGS='@FFLAGS@ $(INC) -g'

install: exe
	$(INSTALL) $(EXE) $(INSTALLROOT)/bin/$(EXE)

clean:
	rm -f $(EXE)  *.o *~ *#


distclean: clean
	rm -f Makefile



get_tilt_netcdf.f:  @NETCDFINC@/netcdf.inc 

netcdfio.f:  $(LAPSROOT)/src/include/remap_dims.inc $(LAPSROOT)/src/include/netcdfio_radar_common.inc@F77INC@

remap.f:  $(LAPSROOT)/src/include/remap.inc $(LAPSROOT)/src/include/remap_dims.inc@F77INC@


