#
#

LAPSROOT=@top_srcdir@
INSTALLROOT=@prefix@

# Specify Fortran, C, and loader options for default SUN configuration.

CC=@CC@

CFLAGS=@CFLAGS@ $(INC) @OPTIMIZE@
KRCFLAGS=@KRCFLAGS@ $(INC)


FC       = @FC@


FFLAGS = @FFLAGS@ $(INC) @OPTIMIZE@

# Define pre-processor command line options for .F files.

CPP = @CPP@

# Define include paths.

INC = -I$(LAPSROOT)/src/include -I@NETCDFINC@

# Define local library name, this houses the module's code
.SUFFIXES:
.SUFFIXES: .o .c .f .a

LIB      = libremap_ftn.a
DEBUGLIB = libdebugremap_ftn.a

# Define other variables 

AR  = @ARCHIVE@
RANLIB   = @RANLIB@

# Define all source code to be compiled and placed in local library.

SRC=fill_common.f\
    get_azimuths_deg.f\
    get_scandata.f\
    ld_ray.f\
    lut_gen.f\
    rcptoremote.f\
    readdata.f\
    remap_process.f\
    timconv.f

ARCHIVE = $(LIB)($(addsuffix .o, $(basename $(SRC))))
DBARCHIVE = $(DEBUGLIB)($(addsuffix .o, $(basename $(SRC))))


all: lib

lib: $(LIB)

$(LIB): $(ARCHIVE) 
	$(RANLIB) $@

debug: 
	rm -f *.o; $(MAKE) lib LIB='$(DEBUGLIB)' ARCHIVE='$(DBARCHIVE)' CFLAGS='@CFLAGS@ $(INC) -g' \
        FFLAGS='@FFLAGS@ $(INC) -g' KRCFLAGS='$(KRCFLAGS) -g' 

install: lib

clean:
	rm -f $(LIB) $(DEBUGLIB) *.o *~ *#


distclean: clean
	rm -f Makefile


fill_common.f:  $(LAPSROOT)/src/include/remap_dims.inc $(LAPSROOT)/src/include/remap_buffer.cmn@F77INC@

get_azimuths_deg.f:  $(LAPSROOT)/src/include/remap_dims.inc $(LAPSROOT)/src/include/remap_buffer.cmn@F77INC@

get_scandata.f:  $(LAPSROOT)/src/include/remap_dims.inc $(LAPSROOT)/src/include/remap_buffer.cmn@F77INC@

ld_ray.f:  $(LAPSROOT)/src/include/remap_dims.inc $(LAPSROOT)/src/include/remap_buffer.cmn@F77INC@

lut_gen.f:  $(LAPSROOT)/src/include/remap_constants.dat $(LAPSROOT)/src/include/remap.cmn@F77INC@

readdata.f:  $(LAPSROOT)/src/include/remap_constants.dat $(LAPSROOT)/src/include/remap_dims.inc $(LAPSROOT)/src/include/remap_buffer.cmn@F77INC@

remap_process.f:  $(LAPSROOT)/src/include/remap_constants.dat $(LAPSROOT)/src/include/remap.cmn $(LAPSROOT)/src/include/remap.inc@F77INC@



