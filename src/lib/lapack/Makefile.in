#
#

LAPSROOT=@top_srcdir@
INSTALLROOT=@prefix@

# Specify Fortran, C, and loader options for default SUN configuration.

CC=@CC@

CFLAGS=@CFLAGS@ $(INC) @OPTIMIZE@
KRCFLAGS=@KRCFLAGS@ $(INC)

DRTUFLAG = -Drtu

F77       = @FC@


FFLAGS = @FFLAGS@ $(INC) @OPTIMIZE@

# Define pre-processor command line options for .F files.

CPP = @CPP@

# Define include paths.

INC = -I$(LAPSROOT)/src/include -I@NETCDFINC@

# Define local library name, this houses the module's code
.SUFFIXES:
.SUFFIXES: .o .c .f .a

LIB      = liblapack.a
DEBUGLIB = libdebuglapack.a

# Define other variables 

AR  = @ARCHIVE@
RANLIB   = @RANLIB@

# Define all source code to be compiled and placed in local library.

SRC=dgecon.f  dgetri.f  dlamch.f  dlaswp.f  dtrti2.f  lsame.f\
    dgetf2.f  dlabad.f  dlange.f  dlatrs.f  dtrtri.f  xerbla.f\
    dgetrf.f  dlacon.f  dlassq.f  drscl.f   ilaenv.f


ARCHIVE = $(LIB)($(addsuffix .o, $(basename $(SRC))))
DBARCHIVE = $(DEBUGLIB)($(addsuffix .o, $(basename $(SRC))))


all: lib

lib: $(LIB)

$(LIB): $(ARCHIVE) 
	$(RANLIB) $@

debug: 
	rm -f *.o; $(MAKE) lib LIB='$(DEBUGLIB)' ARCHIVE='$(DBARCHIVE)' CFLAGS='$(CFLAGS) -g' \
        FFLAGS='$(FFLAGS) -g' KRCFLAGS='$(KRCFLAGS) -g' 

install: lib

clean:
	rm -f $(LIB) $(DEBUGLIB) *.o *~ *#


distclean: clean
	rm -f Makefile










