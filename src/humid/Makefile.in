LAPSROOT=@top_srcdir@
INSTALLROOT=@prefix@

# Specify Fortran, C, and loader options for default SUN configuration.

CC=@CC@


CFLAGS=@CFLAGS@ $(INC) @OPTIMIZE@

FC       = @FC@


FFLAGS = @FFLAGS@ $(INC) @OPTIMIZE@

# Define pre-processor command line options for .F files.

CPP = @CPP@
CPPFLAGS=@CPPFLAGS@

# Define include paths.

INC = -I$(LAPSROOT)/src/include -I@NETCDFINC@

# Define local library name, this houses the module's code

LAPSLIBS = $(LAPSROOT)/src/lib/liblaps.a  \
           $(LAPSROOT)/src/lib/fm/libfm.a \
	   $(LAPSROOT)/src/lib/powell/libpowell.a \
	   $(LAPSROOT)/src/lib/mthermo/libmthermo.a   


DBLAPSLIBS = $(LAPSROOT)/src/lib/libdebuglaps.a   \
             $(LAPSROOT)/src/lib/fm/libdebugfm.a \
             $(LAPSROOT)/src/lib/powell/libdebugpowell.a \
	     $(LAPSROOT)/src/lib/mthermo/libdebugmthermo.a   

OTHERLIBS = @NETCDFLIB@/libnetcdf.a @OTHERLIBS@

.SUFFIXES:
.SUFFIXES: .o .c .f .a .F .i .exe

EXE = lq3driver.x


# Define other variables 

AR  = @ARCHIVE@
RANLIB   = @RANLIB@
INSTALL=@INSTALL@


# Define all source code to be compiled and placed in local library.

SRC=analq.f            ghbry.f            lq3_driver1a.f     rsr.f \
    climate_sm.f       glsp.f             sh2mr.f \
    func.f             glst.f             lsin.f             slv_laplc.f \
    gen_bl_file.f      glstd.f            mak_cld_grid.f     smooth_grid2.f \
    get_laps_gp.f      goes_sbn.f         plotfield.f        weight_func.f \
    get_latest_file.f  int_tpw.f          prep_grid.f        write_lh4.f \
    get_rad.f          lh3_compress.f     raob_step.f        writef_sp.f \
    getmapsdf.f        locate.f           read_lvd_3_4_5.f   writefile.f


MAIN=lq3driver.f


LIB=liblq3.a

ARCHIVE = $(LIB)($(addsuffix .o, $(basename $(SRC))))

all: exe

exe: $(ARCHIVE) $(EXE)



$(EXE): $(ARCHIVE) $(MAIN)
	$(RANLIB) $(LIB)
	$(FC) $(MAIN) $(FFLAGS) $(LIB) $(LAPSLIBS) $(OTHERLIBS) -o $@
	rm -f *.o

